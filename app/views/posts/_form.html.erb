<div class="container mt-5">
  <div class="card p-4 shadow-sm">
    <%= form_with(model: post, url: posts_path, method: :post, local: true, multipart: true, class: "needs-validation") do |form| %>
      <div class="mb-3">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-control", placeholder: "Enter the title of your post" %>
      </div>

      <div class="mb-3">
        <%= form.label :content, class: "form-label" %>
        <%= form.text_area :content, class: "form-control", rows: 5, placeholder: "Write your content here..." %>
      </div>

      <div class="mb-3">
        <%= form.label :image, class: "form-label" %>
        <%= form.file_field :image, class: "form-control" %>
      </div>

      <div class="d-flex justify-content-between">
        <%= form.submit "Submit", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>