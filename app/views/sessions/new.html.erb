<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-header text-center">
          <h1>Login</h1>
        </div>
        <div class="card-body">
          <%= form_with(model: User.new, url: sessions_path, class: "needs-validation") do |f| %>
            <div class="mb-3">
              <%= f.label :name, class: "form-label" %>
              <%= f.text_field :name, class: "form-control", placeholder: "Enter your name" %>
            </div>
            <div class="mb-3">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
            </div>
            <div class="mb-3">
              <%= f.label :status, "Select your status", class: "form-label d-block" %>
              <div class="btn-group" role="group" aria-label="Status">
                <%= f.radio_button :status, "Available", id: "status_available", class: "btn-check" %>
                <%= label_tag "status_available", "ðŸŸ¢ Available", class: "btn btn-outline-success" %>

                <%= f.radio_button :status, "Busy", id: "status_busy", class: "btn-check" %>
                <%= label_tag "status_busy", "ðŸ”´ Busy", class: "btn btn-outline-danger" %>

                <%= f.radio_button :status, "Appear Offline", id: "status_offline", class: "btn-check" %>
                <%= label_tag "status_offline", "âšª Appear Offline", class: "btn btn-outline-secondary" %>
              </div>
            </div>
            <div class="d-grid">
              <%= f.submit 'Login', class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>